#:kivy 1.11.1
<FaceRecognition>:
    GridLayout:
        cols: 2  
        rows: 1
        size: root.size
        Camera:
            play: True
            resolution: (640,960)
        GridLayout:
            cols: 1
            rows: 4 
            Label:
                size_hint: (None, None)
                font_size: 18  
                text: "CoWIT-18"
                background_color: (0,0.11,0.74,1)
                height: 60
            Button:
                size_hint: (None,None)
                font_size: 14
                text: "Recognize me!"
                background_color: (0,0.11,0.74,1)
                on_press: root.capture()
                height: 40
            Button:
                size_hint: (None,None)
                font_size: 14
                text: "Add me!"
                background_color: (0,0.11,0.74,1)                                                                 
                on_press: root.add()
                height: 40
            Button:
                size_hint: (None,None)
                font_size: 14
                text: "Leave me!"
                background_color: (1,0,0,1)
                on_press: root.stop()
                height: 40
<Result>:    
    GridLayout:
        cols: 1  
        rows: 4
        size: root.size
        Label:
            font_size: 20  
            height: 60
            text: "CoWIT-18"
            color: (0,0.11,0.74,1)
        Label:
            font_size: 14
            text: "Result"
            height: 40
            color: (0,0.11,0.74,1)
        Button:
            font_size: 14  
            height: 40
            text: "Send me home!"
            background_color: (0,0.11,0.74,1)
            on_press: root.start()
        Button:
            font_size: 14  
            height: 40
            text: "Leave me!"
            background_color: (1,0,0,1)
            on_press: root.stop()
<Add>:  
    GridLayout:
        cols: 1  
        rows: 5
        size: root.size 
        Label:
            font_size: 20
            height: 60  
            text: "CoWIT-18"
            color: (0,0.11,0.74,1)  
        TextInput:
            multiline: False
            height: 40
            font_size: 14
            focus: True
        Button:
            font_size: 14 
            text: "Send me home!"
            height: 40
            on_press: root.start()
            background_color: (0,0.11,0.74,1)
        Button:
            font_size: 14 
            text: "Add me!"
            background_color: (0,0.11,0.74,1)
            on_press: root.add()
            height: 40
        Button:
            font_size: 14 
            text: "Quit"
            background_color: (1,0,0,1)
            on_press: root.stop()
            height: 40
        
    
