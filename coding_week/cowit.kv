#:kivy 1.11.1

<FaceRecognition>:            
    Button:
        font_size: 25  
        center_x: 200
        center_y: 100
        text: "Recognize me!"
        background_color: (0,0.11,0.74,1)
        size: self.texture_size
        padding_x: 5
        padding_y: 5
        on_press: root.capture()
    Button:
        font_size: 25  
        center_x: 200
        center_y: 140
        text: "Add me!"
        size: self.texture_size
        background_color: (0,0.11,0.74,1)
        padding_x: 5
        padding_y: 5
        on_press: root.add()
        
    Label:
        font_size: 70  
        center_x: 200
        top: 50
        text: "CoWIT-18"
        color: (0,0.11,0.74,1)
    Button:
        font_size: 25  
        center_x: root.width * 4 / 5
        center_y: root.height / 3
        text: "X"
        background_color: (1,0,0,1)
        size: self.texture_size
        padding_x: 5
        padding_y: 5                                                                  
        on_press: root.stop()
    
<Result>:            
    Button:
        font_size: 25  
        center_x: root.width * 3 / 5
        center_y: root.height / 2
        text: "Send me home!"
        size: self.texture_size
        padding_x: 5
        background_color: (0,0.11,0.74,1)
        padding_y: 5
        on_press: root.start()
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "CoWIT-18"
        color: (0,0.11,0.74,1)
    Button:
        font_size: 25  
        center_x: root.width * 4 / 5
        center_y: root.height / 3
        text: "X"
        background_color: (1,0,0,1)
        size: self.texture_size
        padding_x: 5
        padding_y: 5
        on_press: root.stop()
<Add>:            
    Button:
        font_size: 25  
        center_x: root.width * 3 / 5
        center_y: root.height / 2
        text: "Send me home!"
        size: self.texture_size
        padding_x: 5
        padding_y: 5
        on_press: root.start()
        background_color: (0,0.11,0.74,1)
    Button:
        font_size: 25  
        center_x: root.width * 4 / 5
        center_y: root.height / 2
        text: "Add me!"
        size: self.texture_size
        padding_x: 5
        background_color: (0,0.11,0.74,1)
        padding_y: 5
        on_press: root.add()
    Button:
        font_size: 25  
        center_x: root.width * 4 / 5
        center_y: root.height / 3
        text: "X"
        background_color: (1,0,0,1)
        size: self.texture_size
        padding_x: 5
        padding_y: 5
        on_press: root.stop()
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "CoWIT-18"
        color: (0,0.11,0.74,1)
    
